<!DOCTYPE html>
<html>

<head>
    {{!--
    <link rel="stylesheet" type='text/css' href="/bower_components/bootstrap/dist/css/bootstrap-grid.min.css"> --}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <title>{{title}}</title>
</head>

<body class="text-center">
    <main role="main">
        {{>menu}}
        <div class="container">
            <section class="jumbotron text-center">
                <div class="row">
                    <div class="col-md-8 order-md-1">
                        <h2 class="display-5 font-italic">Задачи</h2>
                        <table name="taskTable" class="table table-striped">
                            {{!--
                            <table class="table table-hover"> --}}
                                <thead>
                                    <tr>
                                        <td>№</td>
                                        <td>Название задачи</td>
                                        <td>Тип оплаты</td>
                                        <td>Ставка/сумма</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each tasks}}
                                    <tr>
                                        <th>{{inc @index}} </th>
                                        <th>
                                            <a href="/tasks/{{id_task}}">{{task_title}}</a>
                                        </th>
                                        <th>{{setPaymentType payment_type}}</th>
                                        <th>{{rate}}</th>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                    </div>
                    <div class="col-md-4 order-md-2 mb-4">
                        <h2 class="display-5 font-italic">Счет</h2>
                        <form method="post">
                            <label>Выберите период</label>
                            <div class="row">
                                <div class="col-md-6 mb-3"> 
                                    <label for="dateFrom">с даты</label>
                                    <input class="form-control" type="date" name="from" value={{DateNow}}/>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="dateTill">по дату</label>
                                    <input class="form-control" type="date" name="till" value={{DateNow}}/>
                                </div>
                            </div>
                            <br> 
                            {{!--<input type="submit" formaction="/tasks/{{id_task}}/statement" name="statement" value="Ведомость"> --}}
                            <input class="btn btn-primary btn-lg btn-block" type="submit" formaction="/tasks/bill" name="bill" 
                            value="Сформировать">
                            <br>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </main>
    {{>footer}}
</body>

</html>